<%- include('partials/shopfinalHead') %>

<% cart.forEach(element => { %>
    <div class="card" style="margin: 10px;">
        <div class="row no-gutters">
            <div class="col-auto">
                <img src="<%= element.img %>" class="img-fluid " alt="" style="height: 17rem; width: 20rem;">
            </div>
            <div class="col">
                <div class="card-block px-2" style="margin: 8px; position: relative;">
                    <h4 class="card-title"><%= element.name %></h4>
                    <h4 class="card-title"><%= element.price  %></h4>
                    <h4 class="card-title"><%= element.brand %></h4>
                    <p class="card-text"><%= element.description.substring(0,50) + "...." %></p>
                    <a href="/log/fullview/<%= element.productid %>" class="btn btn-primary" style="position: absolute; left: 0.8rem; top: 13rem;">See Product</a>
                    <a href="/buy/<%= element.productid %>" class="btn btn-primary" >Buy now</a>
                    <a href="/deletefromcart/<%= element.id %>" class="btn btn-primary" style="position: absolute; right: 0.8rem; top: 13rem;">Remove from cart</a>
                </div>
            </div>
        </div>
    </div>
<% }) %>

<a href="/orderFullCart" class="btn btn-primary" >Buy Full Cart</a>


<%- include('partials/footer') %>