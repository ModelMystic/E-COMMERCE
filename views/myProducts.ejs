<%- include('partials/merHeader') %>

<body class="bg-gray-100">



<% products.forEach(product => { %>



<div class="container mx-auto p-4">
    <div class="bg-white rounded-lg shadow-md p-8 flex items-center">
        <!-- Larger Image -->
        <a href="/myProduct/<%= product.id %>">
        <div class="flex-shrink-0 mr-6">
            <img src="<%= product.img %>" alt="Image" class="w-48 h-36 object-cover rounded">
        </div>
    </a>
        
        <!-- Text Content -->
        <a href="/myProduct/<%= product.id %>">
        <div>
            <h2 class="text-xl font-semibold"><%= product.name %></h2>
            
            <p class="text-gray-600"><%= product.description.substring(0,100) %></p>
            <br>
            <h3 class="text-xl font-semibold">$<%= product.price %></h3>
        </div>
    </a>
    
        
        <!-- Buttons -->
        <div class="ml-auto">
            
            <a href="/deleteProduct/<%= product.id %>">
            <button class="bg-red-500 text-white font-semibold py-2 px-4 rounded-full">Delete</button>
        </a>
        </div>
    </div>
</div>


<% }) %>


<a href="/newProduct">
<div class="text-center mt-6">
    <button class="bg-indigo-500 text-white font-semibold py-2 px-4 rounded-full">
        Create More Items
    </button>
</div></a>
<br>

</body>
<%- include('partials/footer') %>